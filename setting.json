/*
  นี่คือ CONFIG สำหรับตั้งค่าระบบ Explorer
*/
{
// ชื่อ Explorer
  "title": "Grovcoin",
 //domain หรือ ไอพี
  "address": "https://explorer.grovcointoken.com",

// coin name
  "coin": "Grovcoins",

// coin symbol
  "symbol": "GROV",

// logo
  "logo": "/images/logo.png",
// ไม่จำเป็น header logo - change false to e.g. "/images/headerlogo.png"
  "headerlogo": false,

// favicon
  "favicon": "public/favicon.ico",

  // Uses bootswatch themes (http://bootswatch.com/)
  // Valid options:
  //     Cerulean, Cosmo, Cyborg, Darkly, Flatly, Journal, Litera, Lumen, 
  //     Lux, Materia, Minty, Pulse, Sandstone, Simplex, Sketchy, Slate, 
  //     Solar, Spacelab, Superhero, United, Yeti
  // theme (see /public/themes for available themes)
  "theme": "Cosmo",

  // port to listen for requests on.
  "port" : 80,

  // database settings (MongoDB)
  "dbsettings": {
    "user": "admin",
    "password": "123456",
    "database": "explorer",
    "address": "localhost",
    "port": 27017
  },

  //update script settings
  "update_timeout": 10,
  "check_timeout": 250,
  "block_parallel_tasks": 1,

  // wallet settings
  "use_rpc": true,

  "wallet": {
    "host": "localhost",
    "port": 30787,
    "username": "user",
    "password": "1234"
  },

  // confirmations
  "confirmations": 100,

  // language settings
  "locale": "locale/en.json",

  // menu settings
  "display": {
    "api": true,
    "markets": true,
    "richlist": true,
    "twitter": true,
    "facebook": true,
    "googleplus": false,
    "youtube": true,
    "search": true,
    "movement": true,
    "network": true,
    // Settings to switch navbar theme, leaving both false will use the 'primary' navbar
    "navbar_dark": false,
    "navbar_light": false
  },

  // index page (valid options for difficulty are POW, POS or Hybrid)
  "index": {
    "show_hashrate": true,
	// api show or not
	"show_hashrate_api": false,
    // Show Market Cap in header
    "show_market_cap": false,
    // Show Market Cap in place of price box
    "show_market_cap_over_price": false,
    "difficulty": "POW",
    "last_txs": 100,
    "txs_per_page": 10
  },

  // ensure links on API page are valid
  // ตัวอย่าง Litecoingreen console command
  // getblockhash 24980
  // getblock a405bc491d2280d1fe902709cb22698cd007dcbba64e4adff198b7b879482237
  // gettransaction 5c5dd1e31ae4639bf4fde33162b463f6f2d0a601a0b39741a45c70f460c09d78
  "api": {
    "blockindex": 24980,
    "blockhash": "a405bc491d2280d1fe902709cb22698cd007dcbba64e4adff198b7b879482237",
    "txhash": "5c5dd1e31ae4639bf4fde33162b463f6f2d0a601a0b39741a45c70f460c09d78",
    "address": "M9nnzm73VPpaekC5ZyxXccxC2SW87XdeqK"
  },

  // market settings
  //included markets: altmarkets, fides, bittrex, poloniex, yobit, bleutrade
  //default market is loaded by default and determines last price in header
  "markets": {
    "coin": "JBS",
    "exchange": "BTC",
    "enabled": ["bittrex"],
    "ccex_key" : "Get-Your-Own-Key",
    "default": "bittrex"
  },

  // richlist/top100 settings
  "richlist": {
    "distribution": true,
    "received": true,
    "balance": true
  },
  // movement page settings
  // min amount: show transactions greater than this value
  // low flag: greater than this value flagged yellow
  // high flag: greater than this value flagged red
  "movement": {
    "min_amount": 100,
    "low_flag": 1000,
    "high_flag": 5000
  },

  // twitter, facebook, googleplus, youtube
  "twitter": "grovcointoken",
  "facebook": "grov",
  "googleplus": "grovcointoken",
  "youtube": "grovcointoken",

  //genesis
  //getblockhash 0
  //getblock 65d89ef05b395131e2a8ce00b8bd7d16f142ec21de1984a4f1ca1e8e56ac8643
  
  "genesis_tx": "8e101b6a26dfda6b2adbd0a1f6e20def7355244967a17a9dbbdac43cc655138b", // merkleroot
  "genesis_block": "65d89ef05b395131e2a8ce00b8bd7d16f142ec21de1984a4f1ca1e8e56ac8643", // hash

  //heavy (enable/disable additional heavy features)
  "heavy": false,

  //disable saving blocks & TXs via API during indexing.
  "lock_during_index": false,

  //amount of txs to index per address (stores latest n txs)
  "txcount": 100,
  "txcount_per_page": 50,

  //show total sent & received on address page (set false if PoS)
  "show_sent_received": true,

  // how to calculate current coin supply
  // COINBASE : total sent from coinbase (PoW)
  // GETINFO : retreive from getinfo api call (PoS)
  // HEAVY: retreive from heavys getsupply api call
  // BALANCES : total of all address balances
  // TXOUTSET : retreive from gettxoutsetinfo api call
  "supply": "COINBASE",

  // how to acquire network hashrate
  // getnetworkhashps: uses getnetworkhashps api call, returns in GH/s
  // netmhashps: uses getmininginfo.netmhashpsm returns in MH/s
  // POC : poc system
  "nethash": "getnetworkhashps",

  // nethash unitd: sets nethash API return units
  // valid options: "P" (PH/s), "T" (TH/s), "G" (GH/s), "M" (MH/s), "K" (KH/s), "POC" (TB/s)
  "nethash_units": "K",

  // Address labels
  // example : "JhbrvAmM7kNpwA6wD5KoAsbtikLWWMNPcM": {"label": "This is a burn address", "type":"danger", "url":"http://example.com"}
  // label (required) = test to display
  // type (optional) = class of label, valid types: default, primary, warning, danger, success
  // url (optional) = url to link to for more information
  "labels": {
  //  "JSoEdU717hvz8KQVq2HfcqV9A79Wihzusu": {"label": "Developers address", "type":"primary", "url":"http://example.com"},
  //  "JSWVXHWeYNknPdG9uDrcBoZHztKMFCsndw": {"label": "Cryptsy"}
  }
}
